<%- include include/header %>
<script src="https://use.typekit.net/hbl7imv.js"></script>
<script>try{Typekit.load({ async: true });}catch(e){}</script>

<div class="fixed-action-btn" style="bottom: 24px; right: 24px;">
    <a href="#postModal" class="btn-floating btn-large blue btn modal-trigger" id="newPost">
        <i class="material-icons">add</i>
    </a>
</div>


<div id="postModal" class="modal bottom-sheet">
    <div class="modal-content">
        <h4>Post a Thought</h4>

        <form class="col s12" id="postForm">
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Title" id="postTitle" type="text">
                    <label for="postTitle">Title</label>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12">
                    <textarea id="postContent" class="materialize-textarea"></textarea>
                    <label for="postContent">Post Body</label>
                </div>
            </div>

        </form>
    </div>
        <div class="modal-footer">
        <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat" id="postBodyBtn">Post</a>
    </div>
</div>

<nav>
    <div class="nav-wrapper">
        <a href="#/" class="brand-logo center tk-kinescope">Exploitab.ly</a>
    </div>
</nav>
<div class="container" id="posts">
    <% for (var i = 0; i < posts.length; i += 1) {%>
    <div class="row">
        <div class="col s12">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"><%= posts[i].title %></span>
                    <div>
                        <%= posts[i].body %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%}%>
</div>

<%- include include/footer %>
